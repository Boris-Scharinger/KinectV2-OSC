<Window x:Class="KinectV2OSC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KinectV2OSC"
        Height="620" Width="680"
        Loaded="MainWindow_Loaded"
        Closing="MainWindow_Closing">
  <Window.Resources>
    <SolidColorBrush x:Key="RedBrush" Color="#ff0000" />
    <SolidColorBrush x:Key="KinectPurpleBrush" Color="#ff52318f" />
    <SolidColorBrush x:Key="KinectBlueBrush" Color="#ff00BCF2" />
  </Window.Resources>
  <Grid Margin="10 0 10 10">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Viewbox Grid.Row="1" HorizontalAlignment="Center">
      <Image Source="{Binding ImageSource}" Stretch="UniformToFill" />
    </Viewbox>
    <StatusBar Grid.Row="2" HorizontalAlignment="Stretch" Name="statusBar" VerticalAlignment="Center" Background="White" Foreground="{StaticResource RedBrush}">
      <StatusBarItem Content="{Binding StatusText}" FontWeight="Bold" FontSize="20" />
    </StatusBar>
  </Grid>
</Window>
